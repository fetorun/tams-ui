{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2021",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "types": [],
    "paths": {
      "tams-ui/*": ["packages/*"],
      "tams-ui": ["packages/tams-ui"]
    },
    "preserveSymlinks": true
  }
}
